<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".group.GroupCreateFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical" >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="함께 주문하면 더 행복하니까,\n그룹장바구니 시작하기"
            android:textSize="20dp"
            android:textStyle="bold"
            android:layout_marginTop="100dp"
            android:layout_gravity="center" />

        <ImageView
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_icons"
            android:layout_gravity="center"
            android:layout_marginTop="40dp" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_logo"
            android:layout_gravity="center"
            android:layout_marginTop="10dp" />

        <LinearLayout
            android:layout_width="380dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="60dp"
            android:background="@drawable/border"
            android:visibility="visible">

            <EditText
                android:id="@+id/editText_group_nickname"
                android:layout_width="wrap_content"
                android:layout_height="50dp"
                android:layout_marginLeft="20dp"
                android:background="@null"
                android:layout_weight="1"
                android:hint="노이노님으로 시작하기" />

            <Button
                android:layout_width="50dp"
                android:layout_height="40dp"
                android:backgroundTint="@color/white"
                android:padding="0dp"
                android:text="변경"
                android:textColor="@color/light_gray"
                app:iconPadding="0dp"
                app:strokeColor="@color/light_gray"
                app:strokeWidth="1dp"
                android:layout_marginRight="5dp"/>

        </LinearLayout>

        <Button
            android:id="@+id/btn_group_create"
            android:layout_width="350dp"
            android:layout_height="70dp"
            android:layout_gravity="center"
            android:layout_marginTop="150dp"
            android:backgroundTint="@color/orange"
            android:backgroundTintMode="screen"
            android:text="그룹 장바구니 참여하기"
            android:visibility="visible"
            app:cornerRadius="0dp" />

    </LinearLayout>

</FrameLayout>