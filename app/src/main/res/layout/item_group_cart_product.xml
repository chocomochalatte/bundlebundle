<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:paddingTop="10dp"
        android:layout_height="wrap_content">
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:paddingTop="0dp"
            android:background="@color/light_gray" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="horizontal"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="60dp"
            android:layout_marginTop="15dp"
            android:layout_marginLeft="15dp"
            android:gravity="center"
            android:layout_height="60dp">
            <ImageView
                android:id="@+id/mycartitem_img"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:scaleType="centerCrop"
                android:src="@drawable/jangbaguni"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_marginTop="15dp"
            android:layout_marginLeft="10dp"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <TextView
                android:id="@+id/mycartitem_name"
                android:layout_width="280dp"
                android:layout_height="wrap_content"
                android:text="[산들내음] 무한생제 한돈 벌집 삽겹살 구이 (800g)" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <TextView
                    android:id="@+id/mycartitem_discountprice"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="28,000" />
                <TextView
                    android:layout_marginLeft="2dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="원" />

                <TextView
                    android:id="@+id/mycartitem_originalprice"
                    android:layout_marginLeft="10dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/middle_gray"
                    android:text="40,900"/>
            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_marginTop="15dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <ImageView
                android:id="@+id/mycartitem_delete"
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:layout_marginLeft="10dp"
                android:src="@drawable/ic_close"/>
        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingBottom="5dp"
            android:gravity="right">

            <ImageView
                android:layout_width="30dp"
                android:background="@drawable/squareborder"
                android:padding="2dp"
                android:layout_height="30dp"
                android:src="@drawable/ic_gift"
                android:layout_marginRight="5dp"/>
            <ImageView
                android:id="@+id/mycartitem_minus"
                android:background="@drawable/squareborder"
                android:padding="2dp"
                android:layout_width="28dp"
                android:layout_height="30dp"
                android:src="@drawable/ic_minus"/>
            <TextView
                android:id="@+id/mycartitem_productCnt"
                android:layout_width="25dp"
                android:layout_height="30dp"
                android:text="1"
                android:textSize="18dp"
                android:textStyle="bold"
                android:gravity="center"/>
            <ImageView
                android:background="@drawable/squareborder"
                android:padding="2dp"
                android:id="@+id/mycartitem_plus"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_marginRight="3dp"
                android:src="@drawable/ic_plus"/>
            <ImageView
                android:layout_width="30dp"
                android:background="@drawable/squareborder"
                android:padding="2dp"
                android:layout_marginRight="10dp"
                android:layout_height="30dp"
                android:src="@drawable/ic_fix"/>
        </LinearLayout>


    </LinearLayout>

</LinearLayout>