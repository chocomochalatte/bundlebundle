<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:orientation="vertical"
    tools:context=".cart.CartFragment">


    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:layout_height="wrap_content">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/light_gray"
            android:paddingTop="10dp"
            android:paddingBottom="10dp">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/dark_gray"
                android:paddingLeft="7dp"
                android:textSize="11dp"
                android:text="배송비 3,500원 (50,000원 이상 결제시 무료)"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:minHeight="8dp"
            android:background="@color/middle_gray"/>

    </LinearLayout>


    <!--두 번째-->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingTop="8dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/black"
                    android:textStyle="bold"
                    android:paddingLeft="7dp"
                    android:textSize="13dp"
                    android:text="총 상품금액"/>

                <TextView
                    android:id="@+id/mycartitem_totalprice"
                    android:layout_width="323dp"
                    android:layout_height="wrap_content"
                    android:textColor="@color/black"
                    android:textStyle="bold"
                    android:paddingRight="2dp"
                    android:paddingLeft="7dp"
                    android:textSize="13dp"
                    android:text="90,500"
                    android:gravity="right"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/black"
                    android:textStyle="bold"
                    android:paddingRight="5dp"
                    android:textSize="13dp"
                    android:text="원"
                    android:gravity="right"/>
            </LinearLayout>
        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingTop="2dp">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/black"
                    android:textStyle="bold"
                    android:paddingLeft="7dp"
                    android:textSize="13dp"
                    android:text="총 할인금액"/>

                <TextView
                    android:id="@+id/mycartitem_discountprice"
                    android:layout_width="323dp"
                    android:layout_height="wrap_content"
                    android:textColor="@color/black"
                    android:textStyle="bold"
                    android:paddingRight="2dp"
                    android:paddingLeft="7dp"
                    android:textSize="13dp"
                    android:text="10,500"
                    android:gravity="right"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/black"
                    android:textStyle="bold"
                    android:paddingRight="5dp"
                    android:textSize="13dp"
                    android:text="원"
                    android:gravity="right"/>
            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingTop="2dp">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/black"
                    android:textStyle="bold"
                    android:paddingLeft="7dp"
                    android:textSize="13dp"
                    android:text="총 배송비"/>

                <TextView
                    android:id="@+id/mycartItem_shipprice"
                    android:layout_width="335dp"
                    android:layout_height="wrap_content"
                    android:textColor="@color/black"
                    android:textStyle="bold"
                    android:paddingRight="2dp"
                    android:paddingLeft="7dp"
                    android:textSize="13dp"
                    android:text="3,500"
                    android:gravity="right"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/black"
                    android:textStyle="bold"
                    android:paddingRight="5dp"
                    android:textSize="13dp"
                    android:text="원"
                    android:gravity="right"/>
            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingTop="4dp">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/light_gray"
                android:textStyle="bold"
                android:paddingLeft="7dp"
                android:textSize="11dp"
                android:text="주문 결제 시 배송지에 따라 배송비가 상이할 수 있습니다."/>

        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginTop="7dp"
            android:layout_marginBottom="7dp"
            android:background="@color/light_gray" />


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingTop="2dp">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="8dp">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/orange"
                    android:textStyle="bold"
                    android:paddingLeft="7dp"
                    android:paddingBottom="7dp"
                    android:textSize="15dp"
                    android:text="총 결제예상금액"/>

                <TextView
                    android:id="@+id/mycartitem_resultprice"
                    android:layout_width="275dp"
                    android:layout_height="wrap_content"
                    android:textColor="@color/orange"
                    android:paddingRight="4dp"
                    android:textStyle="bold"
                    android:paddingLeft="7dp"
                    android:textSize="22dp"
                    android:text="40,323"
                    android:gravity="right"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/orange"
                    android:textStyle="bold"
                    android:textSize="22dp"
                    android:text="원"
                    android:gravity="right"/>
            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingTop="2dp"
            android:background="@color/orange"
            android:layout_marginBottom="8dp"
            android:gravity="center">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/white"
                android:textStyle="bold"
                android:paddingTop="5dp"
                android:paddingLeft="7dp"
                android:paddingBottom="7dp"
                android:textSize="15dp"
                android:text="주문하기"/>

            <TextView
                android:id="@+id/myCartorder_cnt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingTop="5dp"
                android:textColor="@color/white"
                android:textStyle="bold"
                android:paddingLeft="3dp"
                android:paddingBottom="7dp"
                android:textSize="15dp"
                android:text="1"/>

        </LinearLayout>
    </LinearLayout>




    <!--세 번째-->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:orientation="vertical">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/dark_gray"
                android:paddingLeft="7dp"
                android:paddingBottom="7dp"
                android:textSize="13dp"
                android:text="주문안내"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/middle_gray"
                android:paddingLeft="7dp"
                android:paddingBottom="5dp"
                android:textSize="11dp"
                android:text="- 장바구니에 담긴 상품은 최대 60일간 보관됩니다.(로그인기준)"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/middle_gray"
                android:paddingLeft="7dp"
                android:paddingBottom="5dp"
                android:textSize="11dp"
                android:text="- 패키지/딜 종료 시 해당 상품은 자동 삭제됩니다."/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/middle_gray"
                android:paddingLeft="7dp"
                android:paddingBottom="5dp"
                android:textSize="11dp"
                android:text="- 상품을 장기간 보관하시려면 좋아요 를 눌러주십시오."/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/middle_gray"
                android:paddingLeft="7dp"
                android:paddingBottom="5dp"
                android:textSize="11dp"
                android:text="- 장바구니 최대 100개 상품을 담을 수 있습니다."/>
        </LinearLayout>

    </LinearLayout>

</LinearLayout>