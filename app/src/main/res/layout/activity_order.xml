<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".order.OrderActivity">

    <TextView
        android:id="@+id/order_main_text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingTop="100dp"
        android:layout_marginBottom="5dp"
        android:textStyle="bold"
        android:textSize="25dp"
        android:gravity="center"
        android:text="주문이 완료되었습니다."
        app:layout_constraintTop_toTopOf="parent"
        />

    <TextView
        android:id="@+id/order_sub_text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="15dp"
        android:textStyle="normal"
        android:textSize="15dp"
        android:gravity="center"
        app:layout_constraintTop_toBottomOf="@id/order_main_text"
        />

    <LinearLayout
        android:id="@+id/item_cartfragment"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingTop="25dp"
        app:layout_constraintTop_toBottomOf="@id/order_sub_text"
        />

</androidx.constraintlayout.widget.ConstraintLayout>