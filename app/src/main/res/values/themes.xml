<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Base.Theme.BundleBundle" parent="Theme.Material3.DayNight.NoActionBar">
        <!-- Customize your light theme here. -->
        <!-- <item name="colorPrimary">@color/my_light_primary</item> -->
        <item name="colorAccent">@color/orange</item>
    </style>

    <style name="Theme.BundleBundle" parent="Base.Theme.BundleBundle">
        <item name="colorAccent">@color/orange</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="Theme.BundleBundle.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="colorAccent">@color/orange</item>
    </style>

    <style name="Theme.BundleBundle.AppBarOverlay" parent="ThemeOverlay.AppCompat.Light">
        <item name="contentInsetStart">-20dp</item>
        <item name="colorPrimary">@color/white</item>
        <item name="colorPrimaryDark">@color/dark_gray</item>
        <item name="colorAccent">@color/dark_gray</item>
<!--        <item name="colorAccent">@color/orange</item>-->
        <item name="android:windowBackground">@drawable/window_background</item>
    </style>


    <style name="Theme.BundleBundle.PopupOverlay" parent="ThemeOverlay.AppCompat.Light">
        <item name="colorAccent">@color/orange</item>
    </style>

</resources>