<resources>
    <style name="MyAlertDialogTheme" parent="Theme.AppCompat.Dialog.Alert">
        <!-- Dialog 배경 -->
        <item name="android:windowBackground">@color/middle_gray</item>

        <!-- Dialog 타이틀 색상 -->
        <item name="android:titleTextColor">@color/purple</item>

        <!-- Positive 버튼 색상 -->
        <item name="android:colorAccent">@color/dark_pink</item>

        <!-- Negative 버튼 색상 -->
        <item name="android:colorControlNormal">@color/light_gray</item>
    </style>
</resources>
